<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "feed.micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t("static_pages.home.title") %></h1>
    <h2>
      <%= t "static_pages.home.content_head" %>
      <%= link_to t("static_pages.home.name"), Settings.client.new_rails_tutorial %>
      <%= t "static_pages.home.content_foot" %>
    </h2>
    <%= link_to t("static_pages.home.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo"), Settings.client.new_rails_tutorial %>
<% end %>
